<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <groupId>com.store</groupId>
   <artifactId>store-root</artifactId>
   <version>1.0</version>
   <packaging>pom</packaging>
   <name>${project.artifactId}</name>
   <modules>
      <module>store-comp</module>
      <module>store-web</module>
   </modules>
   <properties>
      <aspectj-maven-plugin-version>1.3</aspectj-maven-plugin-version>
      <aspectjweaver-version>1.6.9</aspectjweaver-version>
      <cglib-version>2.2</cglib-version>
      <commons-attributes-api-version>2.1</commons-attributes-api-version>
      <commons-beanutils-version>1.8.3</commons-beanutils-version>
      <commons-codec-version>1.4</commons-codec-version>
      <commons-collections-version>3.2.1</commons-collections-version>
      <commons-configuration-version>1.6</commons-configuration-version>
      <commons-dbcp-version>1.4</commons-dbcp-version>
      <commons-fileupload-version>1.2.2</commons-fileupload-version>
      <commons-httpclient-version>3.1</commons-httpclient-version>
      <commons-io-version>2.0</commons-io-version>
      <ibatis-version>2.3.4.726</ibatis-version>
      <jsp-api-version>2.1</jsp-api-version>
      <jstl-version>1.1.2</jstl-version>
      <junit-version>4.4</junit-version>
      <log4j-version>1.2.16</log4j-version>
      <mysql-connector-java-version>5.1.12</mysql-connector-java-version>
      <quartz-all-version>1.6.1</quartz-all-version>
      <servlet-api-version>2.4</servlet-api-version>
      <slf4j-log4j12-version>1.5.8</slf4j-log4j12-version>
      <spring-modules-jakarta-commons-version>0.8</spring-modules-jakarta-commons-version>
      <spring-modules-version>0.8</spring-modules-version>
      <spring-security-version>2.0.4</spring-security-version>
      <spring-test-version>2.5.6</spring-test-version>
      <spring-version>2.5.6</spring-version>
      <tiles-version>2.0.6</tiles-version>
   </properties>
   <profiles>
      <profile>
         <id>local</id>
            <activation>
              <activeByDefault>true</activeByDefault>
         </activation>
         <properties>
            <profile>local</profile>
         </properties>
      </profile>
      <profile>
         <id>dev</id>
         <properties>
            <profile>dev</profile>
         </properties>
      </profile>
      <profile>
         <id>real</id>
         <properties>
            <profile>real</profile>
         </properties>
      </profile>
   </profiles>
      <build>
      <filters>
         <filter>${basedir}/../../profile-filter-${profile}.properties</filter>
      </filters>
      <plugins>
         <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
               <source>1.6</source>
               <target>1.6</target>
               <encoding>UTF-8</encoding>
               <fork>true</fork>
               <meminitial>128m</meminitial>
               <maxmem>512m</maxmem>
            </configuration>
         </plugin>
         <plugin>
             <groupId>org.apache.maven.plugins</groupId>
             <artifactId>maven-resources-plugin</artifactId>
             <configuration>
                <encoding>UTF-8</encoding>
             </configuration>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <configuration>
               <minmemory>128m</minmemory>
               <maxmemory>512m</maxmemory>
            </configuration>
         </plugin>
      </plugins>
   </build>
   <distributionManagement>
      <site>
         <id>site</id>
         <name>project website</name>
         <url>scp://local.company.com/websites/project.company.com/</url>
      </site>
   </distributionManagement>
</project>
